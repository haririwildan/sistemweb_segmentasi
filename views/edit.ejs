<%- include('partials/header') %>

<div class="container mx-auto p-6 rounded-2xl bg-white shadow-[0px_0px_16px_0px_rgba(0,0,0,0.16)]">
    <h1 class="text-3xl font-bold mb-12">Edit Data Sales Opportunity</h1>

    <form action="/edit/<%= data._id %>" method="POST" class="space-y-4">
        <div class="flex flex-col md:flex-row md:justify-between gap-10">
            <div class="md:w-1/2 w-full">
                <label class="block mb-2 text-[#595959] font-medium">Nama AM</label>
                <input name="nama_am" value="<%= data.nama_am %>" required class="w-full border border-[#ADACAC] px-3 py-2 rounded-lg focus:ring-1 focus:ring-[#40C2BA] focus:outline-none transition duration-500" />
            </div>
    
            <div class="md:w-1/2 w-full">
                <label class="block mb-2 text-[#595959] font-medium">Nama Customer</label>
                <input name="customer" value="<%= data.customer %>" required class="w-full border border-[#ADACAC] px-3 py-2 rounded-lg focus:ring-1 focus:ring-[#40C2BA] focus:outline-none transition duration-500" />
            </div>
        </div>

        <div class="flex flex-col md:flex-row md:justify-between gap-10">
            <div class="md:w-1/2 w-full">
                <label class="block mb-2 text-[#595959] font-medium">Nama Pekerjaan</label>
                <input name="pekerjaan" value="<%= data.pekerjaan %>" required class="w-full border border-[#ADACAC] px-3 py-2 rounded-lg focus:ring-1 focus:ring-[#40C2BA] focus:outline-none transition duration-500" />
            </div>
    
            <div class="md:w-1/2 w-full">
                <label class="block mb-2 text-[#595959] font-medium">Portofolio</label>
                <select name="portofolio" required class="w-full text-[#595959] border border-[#ADACAC] px-3 py-2 rounded-lg focus:ring-1 focus:ring-[#40C2BA] focus:outline-none transition duration-500">
                    <option value="">-- Pilih Portofolio --</option>
                    <option value="PD" <%= data.portofolio === 'PD' ? 'selected' : '' %>>PD</option>
                    <option value="PM" <%= data.portofolio === 'PM' ? 'selected' : '' %>>PM</option>
                    <option value="PS" <%= data.portofolio === 'PS' ? 'selected' : '' %>>PS</option>
                </select>
            </div>
        </div>

        <div class="flex flex-col md:flex-row md:justify-between gap-10">
            <div class="md:w-1/2 w-full">
                <label class="block mb-2 text-[#595959] font-medium">Sales Amount</label>
                <input type="number" name="sales_amount" value="<%= data.sales_amount %>" required class="w-full border border-[#ADACAC] px-3 py-2 rounded-lg focus:ring-1 focus:ring-[#40C2BA] focus:outline-none transition duration-500" />
            </div>
    
            <div class="md:w-1/2 w-full">
                <label class="block mb-2 text-[#595959] font-medium">Stage</label>
                <select name="stage" required class="w-full text-[#595959] border border-[#ADACAC] px-3 py-2 rounded-lg focus:ring-1 focus:ring-[#40C2BA] focus:outline-none transition duration-500">
                    <option value="">-- Pilih Stage --</option>
                    <option value="Inisiasi" <%= data.stage === 'Inisiasi' ? 'selected' : '' %>>Inisiasi</option>
                    <option value="SPH" <%= data.stage === 'SPH' ? 'selected' : '' %>>SPH</option>
                    <option value="Negosiasi" <%= data.stage === 'Negosiasi' ? 'selected' : '' %>>Negosiasi</option>
                    <option value="BAKN" <%= data.stage === 'BAKN' ? 'selected' : '' %>>BAKN</option>
                    <option value="Win" <%= data.stage === 'Win' ? 'selected' : '' %>>Win</option>
                </select>
            </div>
        </div>

        <div class="flex justify-end gap-2 mt-6">
            <a href="/" class="text-base font-medium border border-[#ADACAC] text-[#595959] hover:bg-gray-200 px-4 py-2 rounded-xl transition duration-200">Batal</a>
            <button type="submit" class="text-base font-medium bg-[#40C2BA] text-white px-4 py-2 rounded-xl hover:bg-[#2C928B] transition duration-200">Simpan</button>
        </div>
    </form>
</div>

<%- include('partials/footer') %>